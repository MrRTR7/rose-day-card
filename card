  <script>
    function acceptRose() {
      const result = document.getElementById('result');
      const uiBar = document.getElementById('uiBar');
      const affection = parseInt(uiBar.innerText.match(/\d+/)[0]) + 1;
      
      result.innerText = "üåπ Rose accepted. Love level increased. üíï";
      uiBar.innerText = `üíï Affection +${affection} üíï`;
      
      // Create extra petals on click
      for (let i = 0; i < 8; i++) {
        const p = document.createElement('div');
        p.className = 'petal';
        p.style.left = (Math.random() * 20 + 40) + 'vw';
        p.style.top = '50vh';
        p.style.animationDuration = (2 + Math.random() * 2) + 's';
        p.style.opacity = (0.6 + Math.random() * 0.4);
        document.getElementById('petals').appendChild(p);
      }
    }

    // Generate floating pixel petals
    const petalContainer = document.getElementById('petals');
    for (let i = 0; i < 30; i++) {
      const p = document.createElement('div');
      p.className = 'petal';
      p.style.left = Math.random() * 100 + 'vw';
      p.style.animationDuration = (5 + Math.random() * 5) + 's';
      p.style.animationDelay = Math.random() * 8 + 's';
      p.style.opacity = 0.3 + Math.random() * 0.7;
      petalContainer.appendChild(p);
    }

    // Generate twinkling stars in background
    for (let i = 0; i < 20; i++) {
      const star = document.createElement('div');
      star.className = 'stars';
      star.style.left = Math.random() * 100 + 'vw';
      star.style.top = Math.random() * 100 + 'vh';
      star.style.animationDelay = Math.random() * 3 + 's';
      document.body.appendChild(star);
    }
  </script>
